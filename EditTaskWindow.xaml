<Window x:Class="TaskManagerWPF.Views.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerWPF.Views"
        xmlns:converters="clr-namespace:TaskManagerWPF.Converters"
        mc:Ignorable="d"
        Title="Редактирование задачи" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <converters:ColorToBrushConverter x:Key="ColorConverter"/>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Название -->
        <TextBlock Text="Название:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding Task.Title, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10" Padding="5"/>
        
        <!-- Описание -->
        <TextBlock Text="Описание:" Grid.Row="2" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Text="{Binding Task.Description}" 
                 AcceptsReturn="True" Height="80" 
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,10" Padding="5"/>
        
        <!-- Категория -->
        <TextBlock Text="Категория:" Grid.Row="4" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="5" ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding Task.Category}"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,15">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="16" Height="16" 
                                   Fill="{Binding Color, Converter={StaticResource ColorConverter}}"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="100" Margin="0,0,10,0" 
                    Click="SaveButton_Click" IsDefault="True"/>
            <Button Content="Отмена" Width="100" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>